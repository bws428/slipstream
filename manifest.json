{
  "manifest_version": 3,
  "name": "Slipstream",
  "version": "1.3.0",
  
  "description": "Streamline your aviation record keeping.",
  "homepage_url": "https://github.com/bws428/slipstream",
  "icons": { "128": "dist/icon.png" },
  "default_locale": "en",

  "browser_specific_settings": {
    "gecko": {
      "id": "@slipstream",
      "strict_min_version": "42.0"
    }
  },
 
  "content_scripts": [
    {
      "matches": [
        "https://workspace.spirit.com/cvpn/https/ctweb.spirit.com/crewweb/ctwpm.aspx*"
      ],
      "css": [
        "dist/style.css"
      ],
      "js": [
        "node_modules/lodash/lodash.min.js",
        "dist/slipstream.js"
      ]
    }
  ]
}
