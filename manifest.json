{
  "manifest_version": 3,
  "name": "Slipstream",
  "version": "2.0.0",
  
  "description": "Streamline your aviation record keeping.",
  "homepage_url": "https://github.com/bws428/slipstream",
  "icons": { "128": "dist/icon.png" },

  "browser_specific_settings": {
    "gecko": {
      "id": "@slipstream",
      "strict_min_version": "42.0"
    }
  },
 
  "content_scripts": [
    {
      "matches": "https://workspace.spirit.com/cvpn/https/ctweb.spirit.com/crewweb/ctwpm.aspx*",
      "css": "dist/style.css",
      "js": [
        "node_modules/jquery/dist/jquery.min.js",
        "dist/slipstream.js"
      ]
    }
  ]
}
